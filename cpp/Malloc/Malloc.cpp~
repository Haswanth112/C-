#include<iostream>
using namespace std;
int main()
{
	int n=10;
	int *ptr;
	ptr=(int*)malloc(sizeof(int)*n);
			for(int i=0;i<n;i++)
			{
			cout<<"Enter a Number :"<<endl;
			cin>>*(ptr+i);
			}
			cout<<"Enter elements are :"<<endl;
			for(int i=0;i<n;i++)
			{
			cout<<*(ptr+i)<<endl;
			}
			free(ptr);
			return 0;
			}


